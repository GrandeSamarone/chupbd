<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Suporte.SuporteActivity">

    <include layout="@layout/toolbarsecundario_sem_foto" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fale Conosco" />

    <TextView
        android:layout_margin="8dp"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aqui você pode enviar uma mensagem para esclarecer suas dúvidas  e solicitar informações, assim que pressionar o botao ENVIAR, abrirá uma tela, escolha seu App de email como exemplo o GMAIL e conclua o envio."
        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/spinner_motivo_suporte"
        android:padding="10dp"
        android:background="@drawable/bg_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtlayout_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/desc_suporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:lines="6"
            android:hint="Detalhes"
            android:inputType="textMultiLine"/>
    </android.support.design.widget.TextInputLayout>
    <Button

       android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/btn_enviar_contato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENVIAR"
        android:theme="@style/botaopadrao"/>
</LinearLayout>
</LinearLayout>