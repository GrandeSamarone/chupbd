<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:backgroundTint="@color/background"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="2dp"
    cardview:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cardevento">

    <LinearLayout

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <com.facebook.drawee.view.SimpleDraweeView

        android:id="@+id/iconeevento"
        android:layout_width="match_parent"
        android:layout_height="135sp"
        android:layout_gravity="center"
        android:background="@drawable/gradiente_icone"
        />


    <TextView
       android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="NomeEvento"
        android:id="@+id/nomeevento"
        android:textColor="@color/pretoescrita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="14sp"
       android:maxLines="2"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
      />
        <TextView

            android:text="Marlos Trinidad"
            android:id="@+id/nomeautor_evento"
            android:textColor="@color/cinzadisabilitado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
