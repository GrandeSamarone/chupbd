<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fulanoeciclano.nerdzone.Activits.GeralContatosActivity">
<include layout="@layout/toolbarsecundario"
    android:id="@+id/tolbarinclude"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleViewListaGeralContatos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tolbarinclude"
        android:scrollbars="vertical" />
    <TextView
        android:id="@+id/textoavisonadaencontrado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"

        android:gravity="center"
        />

    <TextView
        android:id="@+id/textoaviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tolbarinclude"
        android:layout_gravity="center"
        android:drawableTop="@drawable/dedo"
        android:gravity="center"
        android:text="Poxa! nao temos um carro proximo" />
</RelativeLayout>
