<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    cardview:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cardcomercio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iconeart"

                android:layout_width="match_parent"
                android:layout_height="204sp"
                android:layout_gravity="center"
                android:background="@drawable/gradiente_icone"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:visibility="gone"
                    android:text="NomeArts"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/nome_art"
                    android:textColor="@color/pretoescrita"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/ico"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content">

                        <LinearLayout

                            android:layout_alignParentLeft="true"
                            android:id="@+id/star_layout"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">




                            <ImageView
                                android:layout_below="@id/relaimg"
                                android:id="@+id/botaocurtirart"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_like"
                                android:layout_marginBottom="8dp"
                                android:layout_margin="8dp"
                                android:layout_gravity="bottom"
                                />


                            <TextView
                                android:id="@+id/minhas_arts_num_curt"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"


                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/botao_add_art_colecao"
                                android:background="@drawable/add_a_colecao_verm"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_toRightOf="@+id/star_layout"
                                android:layout_marginBottom="8dp"
                                android:layout_margin="8dp"
                                android:layout_gravity="bottom"
                                />
                            <TextView
                                android:id="@+id/minhas_arts_num_colecao"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/excluirart"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"

                            android:text="EXCLUIR"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/Corrastag"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                    </LinearLayout>





                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>
