<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="5dp"
    android:id="@+id/layoutroot_dialog"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:id="@+id/button_chat_icone_nome"
            android:layout_width="24dp"
            android:layout_marginRight="4dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_emotion_chat"/>
        <com.vanniktech.emoji.EmojiEditText
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:id="@+id/edit_nome_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLength="20"
            android:background="@drawable/bg_edit_text"
            android:textAlignment="center"
            android:inputType="textMultiLine"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:id="@+id/button_chat_icone_frase"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_emotion_chat"/>
    <com.vanniktech.emoji.EmojiEditText
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/edit_frase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:maxLength="100"
        android:background="@drawable/bg_edit_text"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        />
    </LinearLayout>

    <Button
        android:id="@+id/botaosalvaralteracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALTERAR "
        android:theme="@style/botaopadrao"/>
</LinearLayout>