<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".Votacao.Detalhe.detalhe_votacao_masc"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detalhe_youtube_fem"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradiente_toolbar"
        android:theme="@style/Theme.AppCompat">
        <TextView
            android:id="@+id/texto_Toolbar_youtube_fem"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">
                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carousel_foto_selecionada_youtube_fem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:radius="6dp"
                    app:slideInterval="3000"
                    app:strokeColor="#ffffff"
                    app:strokeWidth="1dp"
                    android:fitsSystemWindows="true"/>

                <View
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientefundobranco" />
                <!-- Back button -->


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/background"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <TextView
                            android:id="@+id/detalhe_selecionado_youtube_fem_titulo"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/pretoescrita"
                            android:text="@string/comercio"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_alignParentLeft="true"
                            />

                    </RelativeLayout>



                    <LinearLayout
                        android:id="@+id/liner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">


                        <TextView
                            android:id="@+id/detalhe_selecionad_youtube_fem_descricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Descricao"
                            android:paddingBottom="10dp"
                            android:paddingTop="8dp"
                            android:textAllCaps="false"
                            android:textColor="@color/pretoescrita"
                            android:textSize="14sp"
                            app:fontFamily="sans-serif" />



                        <RelativeLayout
                            android:id="@+id/click_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/icone_author_selecionado_youtube_fem"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/fundo_user"
                                />

                            <TextView
                                android:layout_toRightOf="@id/icone_author_selecionado_youtube_fem"
                                android:id="@+id/detalhe_selecionado_youtube_fem_criador"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="8dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/primary_dark"
                                android:hint="asasas "
                                />



                        </RelativeLayout>

                        <Button
                            android:layout_marginTop="8dp"
                            android:id="@+id/botaosalvar_youtube_fem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VOTAR"
                            android:theme="@style/botaopadrao"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
