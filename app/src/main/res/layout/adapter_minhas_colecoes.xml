<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:backgroundTint="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/conto_mensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/pretoescrita"
            android:textSize="16sp"
            tools:text="topico" />
        <TextView
            android:layout_below="@+id/conto_mensagem"
            android:layout_alignParentRight="true"
            android:id="@+id/conto_author"
            android:textColor="@color/primary_dark"
            android:layout_width="wrap_content"
           android:layout_margin="8dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/conto_author"
            android:id="@+id/ico"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">



            <LinearLayout
                android:gravity="center"
               android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <com.varunest.sparkbutton.SparkButton

                android:id="@+id/botao_add_a_colecao"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@+id/star_layout"
                app:sparkbutton_iconSize="24dp"
                android:layout_marginBottom="8dp"
                android:layout_margin="8dp"
                android:layout_gravity="bottom"
                app:sparkbutton_activeImage="@drawable/add_a_colecao_verm"
                app:sparkbutton_inActiveImage="@drawable/add_a_colecao_preto"
                app:sparkbutton_primaryColor="@color/vermelho"
                app:sparkbutton_secondaryColor="@color/accent" />

            <TextView
                android:id="@+id/txt_add_colecao"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/botao_add_a_colecao"
                android:layout_height="wrap_content"
                android:text="@string/adicionar_colecao"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>