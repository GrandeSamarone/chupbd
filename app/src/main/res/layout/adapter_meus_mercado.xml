<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    cardview:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cardevento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iconemercado"
        android:layout_width="100sp"
        android:layout_height="120sp"
        android:layout_gravity="center"
        android:background="@drawable/carregando"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

        android:text="Nomemercado"
            android:layout_marginLeft="8dp"
        android:id="@+id/nomemercado"
        android:textColor="@color/preto"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        />
        <LinearLayout
         android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <LinearLayout
          android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_olho"/>

            <TextView

                android:text="85"
                android:id="@+id/quantlike"
                android:textColor="@color/preto"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:singleLine="true"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
         <TextView
             android:textSize="18dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="(30)"/>




        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
        <TextView
            android:id="@+id/editarmercado"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:text="@string/editar_evento"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/Corrastag"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/excluirmercado"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:text="EXCLUIR"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/Corrastag"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>
</android.support.v7.widget.CardView>
