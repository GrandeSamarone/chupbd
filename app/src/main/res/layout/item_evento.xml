<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:layout_marginTop="8dp"
    android:layout_marginLeft="-4dp"
    android:layout_marginRight="-4dp"
    android:elevation="6dp"
    android:id="@+id/cardclickevento"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/tituloeventopostagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:text="Titulo"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:textColor="@color/pretoclaro"
            android:id="@+id/data_evento_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
          android:layout_below="@id/tituloeventopostagem"
            android:text="14/08/2018 "
            />

        <TextView


            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignRight="@id/data_evento_inicio"
            android:layout_below="@id/tituloeventopostagem"
            android:text=""
            android:visibility="gone"
            />

        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="@color/pretoclaro"
            android:id="@+id/data_evento_fim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21/08/2018"
            android:visibility="gone"
            android:layout_alignLeft="@id/textView"
            android:layout_below="@id/tituloeventopostagem"/>

        <TextView
            android:id="@+id/data_topico_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textStyle="bold"
           android:layout_marginLeft="8dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="8dp"
    android:layout_alignBottom="@+id/tituloeventopostagem"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@+id/tituloeventopostagem"
    android:gravity="center_vertical">

        <ImageView
              android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/likecolorido"
            />
        <TextView
            android:id="@+id/quantCurtida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center" />

</LinearLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgeventopostagem"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/tituloeventopostagem"
            android:background="@drawable/gradiente" />

        <LinearLayout
          android:layout_below="@id/imgeventopostagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >
            <ImageView
                android:id="@+id/botaocurtirevento"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/likepreto"
                />
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/ic_chat"/>

        <TextView
            android:gravity="center"
            android:id="@+id/subpostagem"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#tbt viagem Legal"
            android:layout_marginBottom="8dp"
            android:textColor="@color/Corrastag"
            />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>