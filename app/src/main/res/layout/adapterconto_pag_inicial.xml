<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="140dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:backgroundTint="@color/background"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    cardview:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cardconto_pag_inicial">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp">


        <TextView
            android:textColor="@color/pretoescrita"
            android:id="@+id/conto_titulo_pag_inicial"
            android:textSize="12sp"

            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
           android:layout_below="@+id/conto_titulo_pag_inicial"
            android:text="Lorem ipsum dolor sit amet,consectetur adipiscing elit. Mauris et erat risus"
            android:id="@+id/Conto_pag_inicial"
            android:textColor="@color/pretoescrita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="8"
            android:textStyle="italic"
            android:textSize="12sp"
            android:fontFamily="sans-serif"/>
</RelativeLayout>
</android.support.v7.widget.CardView>
