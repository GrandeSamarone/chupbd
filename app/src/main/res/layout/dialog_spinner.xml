<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<Spinner
    android:padding="16dp"
    android:id="@+id/spinnerFiltroEstado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>


    <Spinner
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:id="@+id/spinnerFiltroCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/spinnerlimpar"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIMPAR"
            android:textStyle="bold"
          android:layout_toLeftOf="@+id/spinnercancelar"
            android:textColor="@color/Corrastag"
            />

        <TextView
            android:id="@+id/spinnercancelar"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:textStyle="bold"
           android:layout_toLeftOf="@+id/spinnerok"
            android:textColor="@color/colorPrimaryDark"
           />
        <TextView
        android:id="@+id/spinnerok"
            android:layout_weight="0"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
            android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
    android:layout_alignParentRight="true"/>


    </RelativeLayout>
</LinearLayout>