<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Abrir_Imagem.AbrirImagem">
    <me.relex.photodraweeview.PhotoDraweeView
        android:id="@+id/image_view_img_Unica"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/preto"

        />

    <ProgressBar
        android:id="@+id/progressBarImg_unica"
        style="?android:attr/progressBarStyle"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_img_Unica"
        app:layout_constraintEnd_toEndOf="@+id/image_view_img_Unica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view_img_Unica" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/foto_button_back_unica"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_toRightOf="@+id/foto_button_back_unica"
            android:text="nome da arte"
            android:layout_marginLeft="8dp"
            android:id="@+id/nome_de_foto_unica"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            android:id="@+id/maisdetalhes_art"
            android:textAlignment="center"
           android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mais detalhes"
            android:textSize="16sp"
            android:textColor="@color/branco"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>