<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    cardview:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cardevento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linerclick"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iconeevento"
        android:layout_width="100sp"
        android:layout_height="120sp"
        android:layout_gravity="center"
        android:background="@drawable/carregando"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

        android:text="NomeEvento"
            android:layout_marginLeft="8dp"
        android:id="@+id/nomeevento"
        android:textColor="@color/preto"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        />
        <LinearLayout
         android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_olho"/>

            <TextView

                android:text="85"
                android:id="@+id/quantlike"
                android:textColor="@color/preto"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:singleLine="true"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/likecolorido"/>

            <TextView

                android:text="45"

                android:textColor="@color/preto"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:singleLine="true"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
            />

        </LinearLayout>


            <LinearLayout
                android:layout_marginRight="8dp"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_comentario_colorido"/>

                <TextView

                    android:text="3"

                    android:textColor="@color/preto"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:fontFamily="sans-serif"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
        <TextView
            android:id="@+id/editarevento"
            android:paddingTop="8dp"
            android:text="@string/editar_evento"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/Corrastag"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>
</android.support.v7.widget.CardView>
