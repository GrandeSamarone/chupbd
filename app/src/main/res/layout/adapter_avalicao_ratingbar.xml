<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/background"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_total_number_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:text="3.1" />

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/total_star_rating"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:isIndicator="true"
                    android:maxHeight="20dp"
                    android:minHeight="20dp"
                    android:numStars="5"
                    android:stepSize="0.25"
                    app:mrb_progressBackgroundTint="@color/amareloclaro"
                    app:mrb_progressTint="@color/amareloclaro"
                    app:mrb_secondaryProgressTint="@color/amareloclaro" />

                <TextView
                    android:id="@+id/txt_total_pemberi_bintang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-5dp"
                    android:drawableLeft="@drawable/ic_person_primary_dark"
                    android:gravity="center|left"
                    tools:text="80 total" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star_primary_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:text="5" />
                        </LinearLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constrain_layout_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                            <LinearLayout
                                android:id="@+id/ll_percentage_5"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                />
                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star_primary_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:text="4" />
                        </LinearLayout>

                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center|left"-->
                        <!--android:drawableLeft="@drawable/ic_star_primary_dark"-->
                        <!--android:gravity="center"-->
                        <!--android:text="4" />-->

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constrain_layout_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintWidth_percent="100">

                            <LinearLayout
                                android:id="@+id/ll_percentage_4"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                app:layout_constraintWidth_percent="0.65" />
                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center|left"-->
                        <!--android:drawableLeft="@drawable/ic_star_primary_dark"-->
                        <!--android:gravity="center"-->
                        <!--android:text="3" />-->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star_primary_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:text="3" />
                        </LinearLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constrain_layout_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintWidth_percent="100">

                            <LinearLayout
                                android:id="@+id/ll_percentage_3"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                app:layout_constraintWidth_percent="0.65"
                                android:orientation="horizontal" />
                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center|left"-->
                        <!--android:drawableLeft="@drawable/ic_star_primary_dark"-->
                        <!--android:gravity="center"-->
                        <!--android:text="2" />-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star_primary_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:text="2" />
                        </LinearLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constrain_layout_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintWidth_percent="100">

                            <LinearLayout
                                android:id="@+id/ll_percentage_2"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                app:layout_constraintWidth_percent="0.65" />
                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center|left"-->
                        <!--android:drawableLeft="@drawable/ic_star_primary_dark"-->
                        <!--android:gravity="center"-->
                        <!--android:text="1" />-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star_primary_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:text="1" />
                        </LinearLayout>


                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constrain_layout_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                            <LinearLayout
                                android:id="@+id/ll_percentage_1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                app:layout_constraintWidth_percent="0.65" />
                        </android.support.constraint.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>