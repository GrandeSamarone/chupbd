<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme.
     <item name="android:navigationBarColor">@color/colorPrimaryDark</item>-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       </style>

    <!-- Inclua este style -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Inclua este style, altere o cÃ³digo para a cor que pretender -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <!-- Cor vermelha -->
        <item name="android:textColor">#FFFF0000</item>
    </style>
<!-- Theme.AppCompat.Light-->
    <style name="botaopadrao" parent="Theme.AppCompat.Light">

        <item name="colorControlHighlight">#00bff9</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style do Toolbar-->
    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="AppTheme.TextDivider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>

    </style>

    <style name="AppTheme.PizzaGuy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">150dp</item>
    </style>



</resources>
