<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fulanoeciclano.nerdzone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- <uses-sdk tools:overrideLibrary="com.firebase.ui.auth" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activits.MainActivity" />

        <activity android:name=".Autenticacao.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activits.Cadastrar_icon_nome_Activity"
            android:label="@string/title_activity_cadastrar_icon_nome_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activits.DescricaoGibiActivity"
            android:label="@string/title_activity_descricao_gibi"
            android:parentActivityName=".Activits.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fulanoeciclano.nerdzone.Activits.MainActivity" />
        </activity>
        <activity android:name=".Topico.TopicoDetailActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_application_id" />

        <activity
            android:name=".Icons.PageIcon"
            android:label="@string/title_activity_page_icon1"
            android:parentActivityName=".Activits.Cadastrar_icon_nome_Activity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fulanoeciclano.nerdzone.Activits.Cadastrar_icon_nome_Activity" />
        </activity>

        <activity
            android:name=".Activits.MinhaConta"
            android:label="@string/title_activity_minha_conta"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activits.GeralContatosActivity" />
        <activity android:name=".Activits.ChatActivity" />
        <activity android:name=".Activits.AbrirImagemHQ" />
        <activity android:name=".Activits.MensagensActivity" />
        <activity android:name=".Activits.MeusAmigosActivity" />
        <activity android:name=".Activits.AbrirImgChatActivity" />
        <activity android:name=".Evento.NewEventoActivity" />
        <activity
            android:name=".Evento.EventoDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activits.Meus_eventos" />
        <activity android:name=".Activits.MercadoActivity" />
        <activity android:name=".Activits.Cadastrar_Novo_MercadoActivity" />

        <activity
            android:name=".Evento.DetalheEvento"
            android:label="@string/title_activity_detalhe_evento"
            android:theme="@style/AppTheme"></activity>
    </application>
</manifest>